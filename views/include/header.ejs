<header class="main-header">
	<h1 class="app-name">panorama</h1>
	<h3 class="subtitle" data-bind="visible: loggedIn && !loading()"><span data-bind="text: organization"></span></h3>
</header>

<span class="loading" data-bind="visible: loading">loading...</span>

<% if (everyauth.loggedIn) { %>
<aside class="current-user">
	<div class="current-user-avatar"><a href="<%= user.html_url %>"><img class="user-avatar" src="<%= user.avatar_url %>"></a></div>
	<div class="current-user-name">Hello, <strong><%= user.login %></strong></div>
</aside>
<% } %>

<% if (!everyauth.loggedIn) { %>
<p>See everything that's going on in your organization. <a href="auth/github">Login via GitHub</a></p>
<% } %>