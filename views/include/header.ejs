<header class="main-header">
	<h1 class="app-name">panorama</h1>
	<h3 class="subtitle" data-bind="visible: false"><span data-bind="text: organization"></span></h3>
</header>

<% if (everyauth.loggedIn) { %>
<aside class="current-user">
	<div class="current-user-avatar"><a href="<%= user.html_url %>"><img class="user-avatar" src="<%= user.avatar_url %>"></a></div>
	<div class="current-user-name">Hello, <strong><%= user.login %></strong></div>
	<div class="current-user-organization" data-bind="visible: organizations().length > 0">
		<select data-bind="options: organizations, value: organization, optionsCaption: '<%= user.login %>', optionsText: 'login'"></select>
	</div>
</aside>
<% } %>